{
  "configurations": [
    {
      "name": "Launch Docker Django",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "port": 8001,
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "django"
      }
    },
    {
      "name": "Attach Docker Django",
      "type": "python",
      "request": "attach",
      "connect": {
         "host": "localhost",
         "port": 5678
      },
      "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "django": true,
    }
  ]
}
